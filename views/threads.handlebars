<div class="text-center">
  <p>{{{get_emoji}}}</p>
  <h2>{{name}}</h2>
  <p>Created by {{user.name}} on 
    <span for="img" aria-label="calendar">ðŸ“…</span>
    {{format_date date_created}}
  </p>
  <p>{{description}}</p>
  <div class="comment-dropdown">
    <button class="btn btn-primary" onclick="toggleCommentBox()">Add Comment</button>
    <div id="comment-box" class="comment-box">
      <!-- Comment form goes here -->
      <form>
        <textarea class="form-control" rows="3" placeholder="Write your comment"></textarea>
        <button class="btn btn-success">Submit</button>
      </form>
    </div>
  </div>
</div>
<script>
  // JavaScript function to toggle the comment box visibility
  function toggleCommentBox() {
    const commentBox = document.getElementById('comment-box');
    commentBox.classList.toggle('show');
  }
</script>

