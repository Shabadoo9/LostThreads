<!-- Loop over each object in the projects array -->
{{#each threads as |thread| }}
<div class="row mb-4 project">
  <div class="col-md-5">
    <h2>
      <!-- Call helper function with triple brackets to render the emoji span as HTML -->
      {{{get_emoji}}}
      <a href="/project/{{threads.id}}">{{threads.name}}</a>
    </h2>
    <p>
      <span for="img" aria-label="money">ðŸ’²</span>
      <!-- Pass needed_funding value to the helper function -->
      <span class="dollar-amount">{{format_amount threads.needed_funding}}</span>
      needed!
    </p>
    <p>Created by {{threads.user.name}} on {{format_date threads.date_created}}</p>
  </div>
  <div class="col-md-7">
    <p>
      {{threads.description}}
    </p>
  </div>
</div>
{{/each}}
