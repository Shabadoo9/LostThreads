<!-- Loop over each object in the projects array -->
{{#each threads as |thread| }}
<div class="row mb-4 project">
  <div class="col-md-5">
    <h2>
      <!-- Call helper function with triple brackets to render the emoji span as HTML -->
      {{{get_emoji}}}
      <a href="/threads/{{threads.id}}">{{threads.title}}</a>
    </h2>
    
    <p>Created by {{threads.user.username}} on {{format_date threads.date_created}}</p>
  </div>
  <div class="col-md-7">
    <p>
      {{threads.description}}
    </p>
  </div>
</div>
{{/each}}
