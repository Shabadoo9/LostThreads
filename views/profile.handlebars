<div class="row">
  <div class="col-auto">
    <h2 id="greeting"></h2><h2> {{name}}!</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <a href="/home" type="submit" value="submit" class="btn btn-primary" id="browseBtn">Browse Threads</a>
    <a href="./createThread.handlebars" type="submit" value="submit" class="btn btn-primary" id="createBtn">Create a Thread</a>
    <h3>Your Threads:</h3>

    <h3>Starred Threads:</h3>
  </div>

  {{#if threads.length}}
  <div class="col-md-6 threads-list">
    <h3>Current Threads:</h3>

    {{#each threads as |threads|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/threads/{{threads.id}}">{{threads.name}}</a></h4>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{threads.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

<script src="/public/js/profile.js"></script>
