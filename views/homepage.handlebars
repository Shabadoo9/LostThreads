<!-- Row to loop over each object in the threads array -->
{{#each threads as |threads| }}
<div class="row mb-4 threads">
    <div class="col-md-4">
      <h3>
        {{!-- {{{get_emoji}}} --}}
        <a href="/threads/{{threads.id}}">{{threads.name}}</a>
      </h3>
      <p>
        Created by {{threads.user.name}} on 
        <span for="img" aria-label="calendar">ðŸ“…</span>
        {{format_date threads.date_created}}
      </p>
    </div>
    <div class="col-md-8">
      <p>
        {{threads.description}}
      </p>
    </div>
</div>
{{/each}}

