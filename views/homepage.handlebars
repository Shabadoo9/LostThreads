<!-- Loop over each object in the threads array -->
{{#each threads as |threads| }}
<div class="row mb-4 threads">
  <div class="col-md-5">
    <h2>
      <!-- Call helper function with triple brackets to render the emoji span as HTML -->
      {{{get_emoji}}}
      <a href="/threads/{{threads.id}}">{{threads.name}}</a>
    </h2>
    <p>
      Created by {{threads.user.name}} on 
      <span for="img" aria-label="calendar">ğŸ“…</span>
      {{format_date threads.date_created}}
    </p>
  </div>
  <div class="col-md-7">
    <p>
      {{threads.description}}
    </p>
  </div>
</div>
{{/each}}
